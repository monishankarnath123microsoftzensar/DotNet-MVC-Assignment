@model IEnumerable<MVCWebAppCodeFirstWithAuthen.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie List</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Movie Id</th>
            <th>Movie Name</th>
            <th>Genre</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@Html.ActionLink(item.MovieName, "Details", "Movie", new { id = item.Id }, null)</td>
                <td>@item.Genre</td>

            </tr>
        }


    </tbody>
</table>
